void ParenthesisExpression() #void : {}
{
   TerminalExpression()
   | (
      <OPEN_PARENTHESIS>
      {this.parenthesisDepth++;}
      Expression()
      <CLOSE_PARENTHESIS>
      {this.parenthesisDepth--;}
   )
}

void ParenthesisExpressionWithoutIdentifier() #void : {}
{
   TerminalExpressionWithoutIdentifier()
   | (
      <OPEN_PARENTHESIS>
      {this.parenthesisDepth++;}
      Expression()
      <CLOSE_PARENTHESIS>
      {this.parenthesisDepth--;}
   )
}

