// Sub Expressions
// ----------------------------------------------------------------

void MethodCalls(String identifier) #void : {Token t;}
{
   (
      (
         MethodCall()
      ) | (
         Length()
      )
   )

   (
      <DOT>
      MethodCalls(identifier)
      #CallGroup(2)
   )?
}

void MethodCall() #void : {Token n;}
{
   n = <IDENTIFIER>
   Method(n.image)
}

void Method(String name) : {}
{
   MethodCallArguments()
   {jjtThis.put("name", name);}
}

void MethodCallArguments() #void : {}
{
   <OPEN_PARENTHESIS>
   {this.parenthesisDepth++;}
   (
      CallArgument()
      (
         <COMMA>
         CallArgument()
      )*
   )?
   <CLOSE_PARENTHESIS>
   {this.parenthesisDepth--;}
}

void CallArgument() : {}
{
   Expression()
}

void ArrayPosition() #void : {}
{
   <OPEN_BRACKETS>
   Position()
   <CLOSE_BRACKETS>
}