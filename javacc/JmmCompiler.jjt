void MultDivExpression() #void : {}
{
   NotExpression()
   (
      (
         <MULT>
         MultDivExpression()
         #Multiplication(2)
      ) | (
         <DIV>
         MultDivExpression()
         #Division(2)
      )
   )?
}

void MultDivExpressionWithoutIdentifier() #void : {}
{
